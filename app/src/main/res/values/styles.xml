<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGray</item>
        <!--Default: "colorPrimaryDark" @color/colorPrimaryDark -->
        <item name="colorPrimaryDark">#353442</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">35dp</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#353442</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--About Dialog -->
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12.8sp</item>
        <!-- Used for the background -->
        <item name="android:background">#E0E0E0</item>
    </style>

    <!--Spinner style-->
    <style name="spinner_custom" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#FFFFFFFF</item>

    </style>


</resources>
