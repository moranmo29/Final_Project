<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="com.example.user.myd.ResetPasswordActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/lbl_forgot_password"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/forgot_password_msg"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/email"
                android:layout_width="@dimen/wframe"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/mail"
                android:hint="@string/intro_hint_email"
                android:inputType="textEmailAddress"
                android:padding="0dp"
                android:textColor="#000000"
                android:textColorHint="#717171"
                android:textDirection="rtl" />

            <Button
                android:id="@+id/btn_reset_password"
                android:layout_width="@dimen/wframe"
                android:layout_height="@dimen/h_btn"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:background="@drawable/buttonshape"
                android:backgroundTint="#5FC4BC"
                android:text="@string/btn_reset_password"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_btn"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="@string/btn_back"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

</RelativeLayout>
